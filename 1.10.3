class Client:
    def __init__(self, name,  balance):
        self.name = name
        self.balance_name = balance

    @staticmethod
    def user_info(self):
        return "Клиент: " + self.name + "Баланс: " + str(self.balance) + "руб."

class UserData:
    def __init__(self):
        self.ver_clients = []

    @staticmethod
    def add_client(self, name, balance):
        client = Client(name, balance)
        return self.ver_clients.append(client)

    @staticmethod
    def find_client(self, name):
        info_client = []
        for client in self.ver_clients:
            if client.name == name:
                info_client.append(client.user_info())
                return info_client

clients_database = UserData()

